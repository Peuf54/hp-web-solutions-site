<div id="articles_container">

    <div class="orange_plate">
        <h1>Articles</h1>
    </div>

    <% if current_user %>
        <%= link_to "Ecrire un article", new_article_path, class: 'cta main-cta', id: 'new_article_cta' %>
    <% end %>

    <div id="articles_cards_container" class="sizer">
        <% @articles.each do |article| %>
            <div class="article_card">
                <h2><%= article.title %></h2>
                <p><%= article.description %></p>
                <p class="article_details">Publi√© par <strong><%= article.user.fullname %></strong><br>Le <%= article.published_at %></p>
                <%= link_to "Lire l'article", article_path(article), class: 'cta main-cta' %>
            </div>
        <% end %>
    </div>

</div>
